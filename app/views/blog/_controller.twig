{% macro renderPosts(posts) %}
	{% for item in posts %}
		<h2><a href="/index.php/post/{{item.id}}">{{item.title|e}}</a> <small>{{item.posted_date|date("M j Y")}}</small></h2>
		<p>{{item.content[:300]|trim|replace({"\n":"<br/>"})|raw}}...</p>
		<div>
			<small>by {{item.name|e}}</small>
		</div>
		
	{% else %}

		<p>We could not locate any articles based on your search criteria. Please try again</p>
		
	{% endfor %}
{% endmacro %}